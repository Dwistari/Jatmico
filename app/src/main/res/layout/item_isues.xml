<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

        <RelativeLayout
            android:id="@+id/item_view"
            android:background="@drawable/border"
            android:layout_below="@+id/atas"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">


        <TextView
                android:id="@+id/bug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bug name"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="time"
                android:layout_alignEnd="@id/bug_name"/>

        <TextView
                android:id="@+id/descripsion"
                android:layout_below="@id/bug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"/>


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_user"
                android:layout_below="@id/descripsion"
                android:layout_width="25dp"
                android:layout_height="43dp"
                android:src="@drawable/profil"
                app:civ_border_width="1dp"
                app:civ_border_color="#FFF"
                android:layout_alignParentStart="true"/>

        <TextView
                android:id="@+id/name_user"
                android:layout_below="@id/descripsion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/profile_user"/>

        <Button
                android:id="@+id/severity"
                android:layout_below="@id/descripsion"
                android:text="Severity"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                android:layout_width="48dp"
                android:layout_height="16dp"
                android:background="#4ca38b"
                android:layout_marginTop="7dp"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>
