<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gadient"
        tools:context=".view.login.LoginActivity">

    <ImageView
            android:id="@+id/background_logo"
            android:src="@drawable/artboard_2"
            android:layout_width="309dp"
            android:layout_height="380dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/icon"
            android:src="@drawable/artboard"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="183dp"/>

    <TextView
            android:id="@+id/name_icon"
            android:paddingTop="20dp"
            android:layout_below="@id/icon"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="J A T M I C O"
            android:textColor="@color/white"/>


    <com.extrainteger.identitaslogin.ui.SymbolicLoginButton
            android:id="@+id/login_button"
            android:layout_below="@+id/icon"
            android:text="SIGN IN"
            android:textColor="#fff"
            android:padding="15dp"
            android:paddingTop="50dp"
            android:background="@drawable/oval"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="148dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="51dp"/>


</RelativeLayout>